<div id="page-content">
<%= render 'layouts/messages' %>
<h1 class="text-center mt-4">Article Details</h1>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    <%= @article.user.username if @article.user %>
                    </div>
                            <div class="card-body">
                                <h5 class="card-title"><%=  @article.title %></h5>
                                <div class="card-text"><%= simple_format(@article.description) %></div>
                                
                                <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
                                <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
                                <%= link_to "Return to article", @article_path, class: "btn btn-outline-success" %>
                                </div>
                    <div class="card-footer text-muted">
                    <small> created <%= time_ago_in_words(@article.created_at) %> ago
                    edited  <%= time_ago_in_words(@article.updated_at) %> ago</smalll>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

