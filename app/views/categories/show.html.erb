<div id="page-content">
<h1 class="text-center mt-4">Category: <%= @category.name %>'s profile</h1>
        
            <div class="text-center mt-4">
                <% if logged_in? && current_user && current_user.admin %>
                    <%= link_to "Edit your category", edit_category_path(@category), class: "btn btn-outline-info" %>
                <% end %>    
            </div>
        <h3 class="text-center mt-4">Articles</h3>
            <div class="apple_pagination">
                <div class="page_info">
                    <%= page_entries_info @article %>
                    </div>
                        <%= will_paginate @article, :container => false %>
                    </div>
            <div class="container">
    <%= render 'articles/article' %>
</div>